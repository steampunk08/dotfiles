# Personal Prompt

prompt_todo() {
   TODO=$(ruby -e "
   if File.size('$HOME/.todo') < 2
      puts '  * you current have no todo\'s'
   else
      File.read('$HOME/.todo').each_line do |x|
         puts \"  * #{x}\"
      end
   end
   ")
   echo $TODO
}

prompt_steamline_setup() {
   export PS1="
%F{105}Sphe M%f [ %F{111}%2d%f ]
%F{245}$(prompt_todo)%f
-%f%(!.#.$) "

   export PS2="  %F{111}>%f "
   export PS3="  %F{111}>%f "
   export PS4="  %F{111}>%f "
   export PS5="  %F{111}>%f "
}

prompt_opts=(cr subst percent sp)
prompt_steamline_setup

