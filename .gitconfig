[alias]
   s        = status
   set      = config --global
   edit     = config --global -e
   rmc      = rm --cached
   l        = log --decorate --graph
   ll       = log --decorate --graph -p --stat
   stats    = log --stat
   unstage  = reset HEAD --
   release  = !git archive master --format=zip > release-$(git describe master).zip
   recommit = commit --amend
[credential]
   helper   = store

; Steampunklights Git theme
[color "status"]
   updated         = 197
   changed         = 197
   added           = 154
   untracked       = 105
   branch          = 105 bold
   header          = 242
[color "diff"]
   frag            = 105
   new             = 154
   old             = 197
   context         = 242
   whitespace      = white red
   meta            = 37
[color "branch"]
   local           = 154 bold
   current         = 105 bold
   remote          = 197 bold
   plain           = 242
[color "decorate"]
   branch          = 105 bold
   tag             = 226
   separator       = 215
   HEAD            = 197 bold
   remoteBranch    = 197 bold
   stash           = 242
